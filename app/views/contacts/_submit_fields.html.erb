  <!-- ログインユーザーでない場合、以下を入力する-->
  <% unless user_signed_in? %>
    <div>
      <div class="form-title">お名前<span class="required_content">必須</span></div>
      <%= form.text_field :name, placeholder: "お名前",required: true, class: "text-field" %>
    </div>
    <div>
      <div class="form-title">メールアドレス<span class="required_content">必須</span></div>
      <%= form.text_field :email, placeholder: "メールアドレス",required: true, class: "text-field" %>
    </div>
  <% end %>
  <!-- ログインユーザーでない場合、以上を入力する-->

  <div>
    <div class="form-title">お問い合わせタイトル<span class="required_content">必須</span></div>
    <%= form.text_field :title, placeholder: "タイトル入力(32文字以内)",required: true, class: "text-field" %>
  </div>
  <div>
    <div class="form-title">お問い合わせ内容<span class="required_content">必須</span></div>
    <p><%= form.text_area :content, placeholder: "内容(1000文字以内)",maxlength: "1000", required: true, class:"text-area", id: "textarea" %></p>
    <div class="text-right max-w-4xl mx-auto">
      <span id="message" class="p-4 block"></span>
    </div>
  </div>

