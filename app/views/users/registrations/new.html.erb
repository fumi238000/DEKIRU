<h2>アカウント新規作成</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-body">
    <%= render "users/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.label :name, class:"form-title" %><br />
      <%= f.text_field :name, class: "text-field", class: "text-field" %>
    </div>
  
    <div class="field">
      <%= f.label :email, class:"form-title" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-field" %>
    </div>
  
    <div class="field">
      <%= f.label :password, class:"form-title" %><span>(8文字以上)</span><br/>
      <%= f.password_field :password, autocomplete: "new-password", class: "text-field" %>
    </div>
  
    <div class="field">
      <%= f.label :password_confirmation, class:"form-title" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-field" %>
    </div>
  
    <div class="actions">
      <%= f.submit "作成する", class:"submit-btn" %>
    </div>
  </div>
<% end %>

<%= render "users/shared/links" %>
