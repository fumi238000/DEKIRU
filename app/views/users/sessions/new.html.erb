<h2 class="h2">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-body">
  
  <div class="field">
    <%= f.label :email, class:"form-title"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"login-field" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"form-title" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"login-field" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field my-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class:"submit-btn" %>
    <%# TODO: 共通化すること %>
    <%#= f.submit  t(".sign_in") %>
  </div>
</div>

<% end %>

<%= render "users/shared/links" %>

<div class="my-4">
  <%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, method: :post, class: "blue-btn"%>
</div>
