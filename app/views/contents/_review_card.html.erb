<div class="md:w-1/3">
  <div class="border bg-white m-4 shadow-lg rounded-2xl p-8 md:p-0">
    <!-- 写真 -->
    <div class="m-auto">
      <%= image_tag review.image.thumb214.url, class:"w-full md:rounded-t-2xl" %>
    </div>

    <!-- ユーザー情報 -->
    <div class="flex justify-start p-4">
      <%=image_tag review.user.thumbnail.thumb27.url,class:"rounded-full border-2 border-gray-300" %>
      <span class="ml-4"><%= review.user.name %><span>
    </div>

    <!-- レビュー -->
    <div class="text-left p-2 md:h-52">
      <p class="break-words"><%= review.comment%></p>
    </div>

    <!-- 削除ボタン -->
    <div class="text-left p-4">
      <% if permit_user?(review) %>
        <%= link_to ">>削除", review_path(review), data: { confirm: "削除してもよろしいでしょうか？"}, method: :delete,  class:"red-link block text-right" %>
      <% else %>
        <div class="md:pt-4"></div>
      <% end %>
    </div>
  </div>
</div>
