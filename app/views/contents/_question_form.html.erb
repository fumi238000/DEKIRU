  <%= form_with model: @question, local: true do |f| %>
    <div class="form-body p-4">

      <%= f.hidden_field :content_id, value: @content.id %>

      <div class="my-4">
        <%= f.text_area :question_content ,placeholder: "100文字以内", maxlength:"100",required: true, class:"text-area", id: "textarea" %>
        <div class="text-right max-w-4xl mx-auto">
          <span id="message" class="p-4 block"></span>
        </div>
      </div>

        <div class="my-4">
          <%= f.submit "質問する",data: { confirm: '確定します。よろしいでしょうか？', disable_with: "送信中..."}, class:"submit-btn"%>
        </div>
     </div>
  <% end %>
