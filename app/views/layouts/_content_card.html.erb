<div class="md:w-1/2 xl:w-1/3">
<%= link_to content_show_path(content.id) do %>
  <div class="max-w-2xl m-2 overflow-hidden bg-white rounded shadow-lg border">
    <div><%= image_tag youtube_thumbnail(content.movie_id), class:"w-full object-cover hover:opacity-70" %></div>
    <div class="px-4 py-2 text-md text-dekiru-font text-sm">
      <%= content.title %>
    </div>
  </div>
<% end %>
</div>
