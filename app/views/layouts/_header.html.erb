<header>
  <div class="p-4 flex justify-center items-center">

  <!-- ロゴ -->
  <div class="flex-grow">
    <%= link_to root_path do %>
      <%= image_tag "deKiRU-logo.png" %>
    <% end %>
  </div>

  <!-- 検索フォーム -->
  <div class="flex-none">
    <%= render partial: 'layouts/search_form'%>
  </div>

  <!-- xxxx -->
  <div class="flex-grow">
    <div class="float-right">
      <% if user_signed_in? %>
        <%# ログイン時 %>
        <span><%= link_to "マイページ", mypage_path(current_user), class: "blue-btn" %></span>
      <% else %>
        <%# 非ログイン時 %>
         <span><%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, method: :post, class: "blue-btn"%></span>
        <span><%= link_to "ログイン", new_user_session_path ,class: "blue-btn"%></span>
      <% end %>
    </div>

  </div>

</header>

<hr>
